{
  "mcpServers": {
    "azure-mcp-server": {
      "command": "curl",
      "args": [
        "-X", "POST",
        "-H", "Content-Type: application/json",
        "-H", "Accept: application/json, text/event-stream",
        "--data-binary", "@-",
        "http://localhost:7072/api/mcp"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  }
}

